{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "INDIflight SITL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/obj/main/indiflight_SITL.elf",
            "args": [
                "127.0.0.1"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "INDIflight MOCKUP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${userHome}/.venv/bin/python3",
            "args": ["${workspaceFolder}/src/utils/indiflight_mockup_interface.py"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            // https://stackoverflow.com/questions/53519668/how-to-attach-to-remote-gdb-with-vscode
            "name": "MOCKUP docker",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/obj/main/indiflight_MOCKUP.so",
            "target": "localhost:3333",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "obj/main/indiflight_STM32H743.elf",
            "name": "Pi Cortex OpenOCD",
            "request": "attach",
            "preLaunchTask": "start-openocd-pi",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 2
            },
            "servertype": "external",
            "gdbTarget": "${input:REMOTE_IP}:3333",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "objdumpPath": "/usr/bin/objdump"
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "obj/main/indiflight_STM32H743.elf",
            "name": "Orin Cortex OpenOCD",
            "request": "attach",
            "preLaunchTask": "start-openocd-orin",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 2
            },
            "servertype": "external",
            "gdbTarget": "${input:REMOTE_IP}:3333",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "objdumpPath": "/usr/bin/objdump",
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "REMOTE_IP",
            "description": "Please provide the ip of the remote to be debugged",
            "default": ""
        }
    ]
}